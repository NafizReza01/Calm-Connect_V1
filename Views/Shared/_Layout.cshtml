<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calm&Connect</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="header">
        <h3>Fighting Anxiety</h3>
        <a href="@Url.Action("Index", "Home")">
            <img src="~/Pictures/logo.jpg" alt="Calm&Connect Logo" />
        </a>
        <h3>One At A Time</h3>
        <a href="@Url.Action("Dashboard", "Home")" class="login-btn">Login/Signup</a>
    </div>

    <div class="menu-bar">
        <div class="menu-item">
            <a href="@Url.Action("Index", "Home")" style="color:white; text-decoration:none;">Home</a>
        </div>
        <div class="menu-item">
            <a href="@Url.Action("Doctors", "Home")" style="color:white; text-decoration:none;">Doctors List</a>
        </div>
        <div class="menu-item dropdown">
            <span>Appointments</span>
            <div class="dropdown-content">
                <a href="@Url.Action("Anonymous", "Appointments")" class="dropdown-item">Anonymous</a>
                <a href="@Url.Action("Online", "Appointments")" class="dropdown-item">Online</a>
                <a href="@Url.Action("Offline", "Appointments")" class="dropdown-item">Offline</a>
            </div>
        </div>
        <div class="menu-item">
            <a href="@Url.Action("Blogs", "Home")" style="color:white; text-decoration:none;">Blogs</a>
        </div>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <footer>
        <p>Calm&Connect - Footer Placeholder</p>
        <ul>
            <li>Item1</li>
            <li>Item2</li>
        </ul>
        <ul>
            <li>Item1</li>
            <li>Item2</li>
        </ul>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
